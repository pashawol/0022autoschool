mixin s-reviews()
	// start s-reviews
	+b.s-reviews.section#s-reviews&attributes(attributes)
		.container
			.row
				mixin text-rew(i,t, a="#")
					+e.col.col-lg-6
						+e.item
							+e.A.link--vk(href= a target='_blank')
								+icon("vk")
							+e.item-header
								+e.img-wrap
									img.res-i(src=`img/@2x/rew-i${i}.jpg` alt='')
								+e.item-title= t
							block
				mixin video-rew(a="https://www.youtube.com/embed/hT_nvWreIhg")
					+e.col.col-lg-6
						+e.video-wrap
							<iframe width="560" height="315" src='#' data-src= a allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> 
			
				+text-rew('1','Анастасия Богданова')
